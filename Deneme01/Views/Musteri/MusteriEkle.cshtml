@model Deneme01.Models.Musteri

@{
    ViewBag.Title = "Müşteri Ekle";
    Layout = "~/Views/Shared/_LayoutNavBar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Yeni Müşteri Ekle</title>
</head>
<body>
    <h2>Yeni Müşteri Ekle</h2>

    <form class="form-group" method="post">

        <div style="margin-bottom:20px">
            <label>[YENİ] Müşterinin Adı</label>
            @Html.TextBoxFor(x => x.Musteri_Adi, new { @class = "form-control", style = "font-size:15px" })
        </div>
        <div style="margin-bottom:20px">
            <label>[YENİ] Müşterinin Soyadı</label>
            @Html.TextBoxFor(x => x.Musteri_Soyadi, new { @class = "form-control", style = "font-size:15px" })
        </div>
        <div style="margin-bottom:20px">
            <label>[YENİ] Müşterinin Telefon Numara Bilgisi</label>
            @Html.TextBoxFor(x => x.Musteri_Telefon_No, new { @class = "form-control", style = "font-size:15px" })
        </div>
        <div style="margin-bottom:20px">
            <label>[YENİ] Müşterinin Cinsiyet Bigisi --> (Erkek için 'True', Kadın için 'False' yazılmak zorundadır.)</label>
            @Html.TextBoxFor(x => x.Musteri_Cinsiyet, new { @class = "form-control", style = "font-size:15px" })
        </div>
        <div style="margin-bottom:20px">
            <label>[YENİ] Müşterinin Siparişi Gerçekleştirdiği Şehir</label>
            @Html.TextBoxFor(x => x.Musteri_Sehir, new { @class = "form-control", style = "font-size:15px" })
        </div>
        <div style="margin-bottom:20px">
            <label>[YENİ] Müşterinin E-Mail Bilgisi(Sadece gmail kabul edilmektedir.)</label>
            @Html.TextBoxFor(x => x.Musteri_E_Mail, new { @class = "form-control", style = "font-size:15px" })
        </div>

        <div>
            <button type="submit" class="btn btn-success" style="margin-right:25px; block-size:42px; font-size:15px;">Ekle</button>
            <a href="@Url.Action("MusteriListele", "Musteri")" class="btn btn-secondary" style="font-size:17px"><b>Geri</b></a>
        </div>

    </form>

</body>
</html>